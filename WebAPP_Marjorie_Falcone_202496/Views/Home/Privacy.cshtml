@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Préstamos - Inicio</title>
    <!-- Cargar Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-custom {
            margin: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            transition: 0.3s;
        }

            .card-custom:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .card-img-top {
            border-radius: 50%;
            width: 50%;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Gestión de Préstamos Bancarios</h2>

        <div class="row justify-content-center">
            <!-- Card para Cliente -->
            <div class="col-md-4">
                <div class="card card-custom">
                    <img src="https://c0.klipartz.com/pngpicture/320/858/gratis-png-administrador-de-iconos-de-computadora-director-ejecutivo.png" class="card-img-top mx-auto" alt="Administrador">
                    <div class="card-body">
                        <h5 class="card-title">Cliente</h5>
                        <p class="card-text">Accede a tu cuenta para gestionar tus préstamos, ver el estado de tus solicitudes y realizar pagos.</p>
                        <a asp-controller="Home" asp-action="Cliente" class="btn btn-primary">Entrar como Cliente</a>
                    </div>
                </div>
            </div>

            <!-- Card para Administrador -->
            <div class="col-md-4">
                <div class="card card-custom">
                    <img src="https://static.vecteezy.com/system/resources/previews/014/649/447/non_2x/outsource-manager-icon-simple-style-vector.jpg" class="card-img-top mx-auto" alt="Administrador">
                    <div class="card-body">
                        <h5 class="card-title">Administrador</h5>
                        <p class="card-text">Inicia sesión para gestionar solicitudes de préstamos, revisar pagos y generar reportes.</p>
                        <a asp-controller="Home" asp-action="Administrador" class="btn btn-success">Entrar como Administrador</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cargar Bootstrap JS y dependencias de Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
